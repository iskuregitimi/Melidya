@using Melidya.Entity
@model List<Products>

<div class="container">
    @foreach (Products item in Model)
    {
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/Image/bigking.jpg">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.UnitPrice</p>
                <a href="/Home/AddBasket/@item.ProductID" class="btn btn-primary"><i class="fas fa-shopping-cart"></i> Sepete Ekle</a>
            </div>
        </div>
    }
</div>