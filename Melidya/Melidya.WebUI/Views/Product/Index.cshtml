@using Melidya.ENTITY
@model List<Products>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <br />
    <div class="container">
        <div class="row">
            @foreach (Products item in Model)
            {
                <div class="col-md-3 table-bordered text-center">
                    <img src="~/Content/images/cifte-kavrulmus-fistikli-lokum.jpg" width="200" height="200" /><br />
                    <b> @item.ProductName</b> <br />
                    <b> @item.UnitPrice</b><br />
                    <a href="/Product/AddSepet/@item.ProductID" class="btn btn-primary"><i class="glyphicon glyphicon-shopping-cart"></i>Sepete Ekle</a>
                </div>              
            }
        </div>

    </div>
</section>
