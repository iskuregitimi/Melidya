@model Melidya.Entities.Customer

@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>UpdateProfile</h2>
@using (Html.BeginForm("UpdateProfile", "Profile", FormMethod.Post))
{


    <div class="form-group">
        <label for="cname">Contact Name</label>
        @Html.TextBoxFor(x => x.ContactName, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="ctitle">Contact Title:</label>
        @Html.TextBoxFor(x => x.ContactTitle, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="companyname">Company Name</label>
        @Html.TextBoxFor(x => x.CompanyName, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="cphone">Phone Number</label>
        @Html.TextBoxFor(x => x.Phone, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="cadress">Adress</label>
        @Html.TextBoxFor(x => x.Address, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="ccity">City</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="ccountry">Country</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form - text text - muted" })
    </div>
    <div class="form-group">
        <label for="cpassword">Password</label>
        @Html.TextBoxFor(x => x.Password, new { @class = "form - text text - muted" })
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>

    @Html.HiddenFor(x => x.CustomerID)

}