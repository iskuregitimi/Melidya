@model Melidya.WebUI.Models.CustomerModel

@{
    ViewBag.Title = "LoginOl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
@using (Html.BeginForm("LoginOl", "Login", FormMethod.Post))
{
<form>
    <div class="form-group">
        @Html.LabelFor(x => x.UserID)
        @Html.TextBoxFor(x => x.UserID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(y=>y.Password)
        @Html.TextBoxFor(y=>y.Password, new { @class = "form-control" })
    </div>
    <input type="submit" name="name" value="Giriş" class="btn btn-success" />

</form>
}

