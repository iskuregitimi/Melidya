@using Melidya.ENTITY
@model Customers
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="container">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Kullanıcı Adı</span>
            </div>
            @Html.TextBoxFor(x => x.CustomerID, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
        </div>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Şifre&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
            </div>
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre" })
        </div>
        <input type="submit" value="Giriş" class="btn btn-success" />
    </div>
}
